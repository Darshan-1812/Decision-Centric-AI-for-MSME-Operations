# Environment Configuration

# Application
APP_NAME="Decision-Centric AI for MSME"
APP_ENV=development
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/msme_db
# OR for MongoDB
# MONGODB_URI=mongodb://localhost:27017/msme_db

# AI Configuration
# Google Gemini API Key (get from https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key_here
AI_MODEL=gemini-2.5-flash-lite-preview-09-2025
AI_TEMPERATURE=0.7

# Email Configuration (Gmail)
# For Gmail, use App Password: https://support.google.com/accounts/answer/185833
COMPANY_EMAIL=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# Automation
AUTOMATION_INTERVAL_MINUTES=10

# Security
SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend
REACT_APP_API_URL=http://localhost:8000/api
NEXT_PUBLIC_API_URL=http://localhost:8000

# Logging
LOG_LEVEL=INFO
